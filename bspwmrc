#!/bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

xss-lock --transfer-sleep-lock -- ~/bin/lock &

~/.fehbg
killall -qw picom; picom -b
killall -qw dunst; dunst &
killall -qw polybar; ~/.config/polybar/launch.sh &
killall -qw wait_for_monitor.sh; ~/.config/bspwm/wait_for_monitor.sh &

bspc monitor 'eDP-1' -n 1 -d 1 2 3 4 5 6 7 8 9

bspc config border_width		0
bspc config window_gap			10

bspc config split_ratio			0.52
bspc config borderless_monocle	true
bspc config gapless_monocle		true
