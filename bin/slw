#! /bin/bash

rand() {
	tr -dc 0-9 < /dev/urandom | head -c 5 | sed 's/^0*//'
	echo
}

reset

while [ true ]; do
	CARS=$(( $(rand) % 16 + 1 ))
	FLAGS=""

	if [ $(( $(rand) % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-a "
	fi

	if [ $(( $(rand) % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-c "
	fi

	if [ $(( $(rand) % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-l "
	fi

	if [ $(( $(rand) % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-w "
	fi

	sl -${CARS} ${FLAGS} | lolcat

	sleep 1
done
