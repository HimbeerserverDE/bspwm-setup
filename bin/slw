#! /bin/bash

while [ true ]; do
	CARS=$(( ${RANDOM} % 16 + 1 ))

	if [ $(( ${RANDOM} % 2 )) -eq 0 ]; then
		FLAGS="${FLAGS}-a "
	fi

	if [ $(( ${RANDOM} % 2 )) -eq 0 ]; then
		FLAGS="${FLAGS}-c"
	fi

	if [ $(( ${RANDOM} % 2 )) -eq 0 ]; then
		FLAGS="${FLAGS}-l"
	fi

	if [ $(( ${RANDOM} % 2 )) -eq 0 ]; then
		FLAGS="${FLAGS}-w"
	fi

	sl -${CARS} ${FLAGS} | lolcat

	sleep 1
done
