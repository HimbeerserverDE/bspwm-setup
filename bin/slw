#! /bin/bash

while [ true ]; do
	CARS=$(( ${RANDOM} % 16 + 1 ))

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-a "
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-c"
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-d"
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-F"
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-G"
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-l"
	fi

	if [ $(( ${RANDOM} % 2 )) -gt 0 ]; then
		FLAGS="${FLAGS}-w"
	fi

	sl -e -${CARS} ${FLAGS} | lolcat
done
